{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "sourceMap": false,
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "noImplicitUseStrict": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "out",
    ".next"
  ]
}
